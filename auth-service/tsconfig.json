{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "src/types"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests", "src/types"]
}
